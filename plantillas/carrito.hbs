{{#if carrito.length }}
    <button class="btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Enviar</button>
    <table class="section-carrito__table">
        <tr class="section-carrito__table__title">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{marca}}</td>
            <td>
                <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>
            
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}
            
            <td>
                <button class="section-carrito__button" onclick="carritoController.borrarProductoCarrito({{id}})">borrar</button>
            </td>
        </tr>
         {{/each}}
    </table>
{{else}}
    <h2 class="section-carrito__placeholder-title">Tu carrito está vacío</h2>
    <p class="section-carrito__placeholder-subtitle">¿Todavía no elegiste nada? ¡Tenemos miles de productos para vos!</p>
{{/if}}

